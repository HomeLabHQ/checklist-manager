{
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
   "eslint.workingDirectories": [ "./frontend", ],
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
  "python.analysis.indexing": true,
  "python.analysis.extraPaths": ["${workspaceFolder}/backend/.venv"],
  "python.autoComplete.extraPaths": ["${workspaceFolder}/backend/.venv/"],
  "python.analysis.include": ["./backend/.venv"],
  "python.analysis.addImport.exactMatchOnly": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.packageIndexDepths": [
    {
      "name": "django",
      "depth": 5
    },
    {
      "name": "rest_framework",
      "depth": 20,
      "includeAllSymbols": true
    },
    {
      "name": "rest_social_auth",
      "depth": 20,
      "includeAllSymbols": true
    }
  ],
  "sonarlint.connectedMode.project": {
    "connectionId": "VScode",
    "projectKey": "HomeLabHQ_checklist-manager"
  },

  "ruff.args": ["--line-length", "120", "--config=${workspaceFolder}/backend/pyproject.toml"],
  "ruff.format.args": ["--config", "${workspaceFolder}/backend/pyproject.toml"]
}
