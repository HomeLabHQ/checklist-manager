{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "fe+be",
      "configurations": ["be", "fe"],
      "stopAll": true
    },
    {
      "name": "fe+be+client",
      "configurations": ["be-server", "fe-server", "client"],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "be",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/manage.py",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/.env",
      "args": ["runserver"],
      "django": true,
      "consoleTitle": "Django",
      "justMyCode": false
    },
    {
      "name": "fe",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/frontend",
      "envFile": "${workspaceFolder}/.env",
      "runtimeExecutable": "yarn",
      "runtimeVersion": "20.11.1",
      "runtimeArgs": ["run", "dev"],
      "consoleTitle": "React"
    },
    {
      "name": "be-tests",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/manage.py",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/.env",
      "args": ["test"],
      "django": true,
      "consoleTitle": "BE tests",
      "justMyCode": true
    },

    {
      "name": "Celery Beat",
      "type": "python",
      "request": "launch",
      "module": "celery",
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": ["-A", "core", "beat", "-l", "INFO"],
      "django": true,
      "justMyCode": true,
      "consoleTitle": "Celery Beat"
    },
    {
      "name": "Celery Worker",
      "type": "python",
      "request": "launch",
      "module": "celery",
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": ["-A", "core", "worker", "-l", "INFO", "-Q", "django"],
      "justMyCode": true,
      "consoleTitle": "Celery Worker"
    },

    {
      "name": "client",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "userDataDir": false,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend"
    }
  ]
}
